# Sample credentials file for /secure route
# Copy this file to secure_credentials.yml and add your credentials
#
# auth_message: The message shown in the HTTP Basic Auth dialog (optional)
#
# Credentials format:
#   username: the username for HTTP Basic Auth
#   password: the password for HTTP Basic Auth
#   active_at: date when this credential becomes active (YYYY-MM-DD)
#   inactive_at: date when this credential expires (YYYY-MM-DD)
#
# Notes:
#   - Leave active_at blank to make credential active immediately
#   - Leave inactive_at blank to make credential never expire
#   - You can have multiple credentials active at the same time

auth_message: Secure Area Access

credentials:
  - username: alphabet
    password: guillermo
    active_at: 2026-01-01
    inactive_at: 2027-12-31

  - username: example_user
    password: example_password
    active_at: 2026-01-01
    inactive_at: 2026-06-30
